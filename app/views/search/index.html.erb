<div class="w-full mx-auto">
  <table
    class="
      w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400
    "
  >
    <thead
      class="
        text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400
      "
    >
      <tr>
        <th scope="col" class="px-6 py-3">
          <%= sort_link(@query, :title, "Title", default_order: :asc) %>
        </th>
        <th scope="col" class="px-6 py-3">
          <%= sort_link(@query, :body, "Blog Content") %>
        </th>
        <th scope="col" class="px-6 py-3">
          <%= sort_link(@query, :user.name, "users") %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr
          class="
            bg-white border-b dark:bg-gray-800 dark:border-gray-700 border-gray-200
          "
        >
          <th
            scope="row"
            class="
              px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white
            "
          >
            <%= link_to post.title, post %>
          </th>
          <td class="px-6 py-4">
            <%= post.body.truncate_words(5) %>
          </td>
          <td class="px-6 py-4">
            <%= link_to post.user.name, post.user %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
